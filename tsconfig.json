{
  "include": ["./src/**/*.ts", "./types"],
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "bundler",

    "rootDir": "./",
    "outDir": "build",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,

    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
