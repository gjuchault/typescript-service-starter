{
	"name": "@gjuchault/typescript-service-starter",
	"version": "0.0.0-development",
	"description": "Yet another typescript service starter template",
	"author": {
		"name": "Gabriel Juchault",
		"email": "gabriel.juchault@gmail.com"
	},
	"type": "module",
	"exports": "./client/schema.d.ts",
	"types": "./client/schema.d.ts",
	"license": "MIT",
	"engines": {
		"node": "^23.5.0",
		"npm": "^10.9.2"
	},
	"volta": {
		"node": "23.5.0",
		"npm": "10.9.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"client"
	],
	"scripts": {
		"start:prod": "node --env-file=.env --env-file-if-exists=.env.local ./build/index.js",
		"start:dev": "node --disable-warning=ExperimentalWarning --env-file=.env --env-file-if-exists=.env.local --env-file=.env.development --env-file-if-exists=.env.development.local --experimental-strip-types ./src/index.ts | pino-pretty",
		"worker:prod": "node --env-file=.env --env-file-if-exists=.env.local ./build/worker.js | pino-pretty",
		"worker:dev": "node --disable-warning=ExperimentalWarning --env-file=.env --env-file-if-exists=.env.local --env-file=.env.development --env-file-if-exists=.env.development.local --experimental-strip-types ./src/worker.ts | pino-pretty",
		"bundle": "node --disable-warning=DeprecationWarning --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/bundle.ts",
		"generate-client": "node --disable-warning=DeprecationWarning --disable-warning=ExperimentalWarning --env-file=.env --env-file-if-exists=.env.local --experimental-strip-types ./scripts/generate-client.ts",
		"generate-secret": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/generate-secret.ts",
		"migrate:up": "node --disable-warning=ExperimentalWarning --env-file=.env --env-file-if-exists=.env.local --experimental-strip-types ./scripts/migrate.ts up",
		"migrate:down": "node --disable-warning=ExperimentalWarning --env-file=.env --env-file-if-exists=.env.local --experimental-strip-types ./scripts/migrate.ts down",
		"migrate:create": "node --disable-warning=ExperimentalWarning --env-file=.env --env-file-if-exists=.env.local --experimental-strip-types ./scripts/migrate.ts create",
		"type:check": "tsc --noEmit",
		"lint": "biome check . --write",
		"lint:check": "biome ci .",
		"test": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/test.ts test",
		"test:watch": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/test.ts test:watch",
		"test:coverage": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/test.ts test:coverage",
		"spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\"",
		"cz": "cz",
		"semantic-release": "semantic-release",
		"setup": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/setup.ts",
		"test:setup": "node --disable-warning=ExperimentalWarning --experimental-strip-types ./scripts/test-setup.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@ryansonshine/commitizen": "^4.2.8",
		"@ryansonshine/cz-conventional-changelog": "^3.3.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/github": "^11.0.1",
		"@semantic-release/npm": "^12.0.1",
		"@semantic-release/release-notes-generator": "^14.0.2",
		"@types/ms": "^0.7.34",
		"@types/node": "^22.10.2",
		"@types/prompts": "^2.4.9",
		"@types/yamljs": "^0.2.34",
		"c8": "^10.1.3",
		"cspell": "^8.17.1",
		"esbuild": "^0.24.2",
		"is-main": "^0.4.0",
		"launch-editor": "^2.9.1",
		"openapi-types": "^12.1.3",
		"openapi-typescript": "^7.4.4",
		"pino-pretty": "^13.0.0",
		"prompts": "^2.4.2",
		"rimraf": "^6.0.1",
		"semantic-release": "^24.2.0",
		"slugify": "^1.6.6",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@autotelic/fastify-opentelemetry": "^0.22.0",
		"@fastify/accepts-serializer": "^6.0.2",
		"@fastify/circuit-breaker": "^4.0.1",
		"@fastify/cookie": "^11.0.1",
		"@fastify/cors": "^10.0.1",
		"@fastify/formbody": "^8.0.1",
		"@fastify/helmet": "^13.0.0",
		"@fastify/multipart": "^9.0.1",
		"@fastify/rate-limit": "^10.2.1",
		"@fastify/session": "^11.0.2",
		"@fastify/swagger": "^9.4.0",
		"@fastify/under-pressure": "^9.0.2",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/exporter-metrics-otlp-proto": "^0.57.0",
		"@opentelemetry/exporter-trace-otlp-proto": "^0.57.0",
		"@opentelemetry/resources": "^1.30.0",
		"@opentelemetry/sdk-metrics": "^1.30.0",
		"@opentelemetry/sdk-node": "^0.57.0",
		"@opentelemetry/sdk-trace-node": "^1.30.0",
		"@opentelemetry/semantic-conventions": "^1.28.0",
		"bullmq": "^5.34.6",
		"connect-redis": "^8.0.1",
		"exit-hook": "^4.0.0",
		"fastify": "^5.2.0",
		"fastify-type-provider-zod": "^4.0.2",
		"http-terminator": "^3.2.0",
		"ioredis": "^5.4.2",
		"ms": "^2.1.3",
		"pino": "^9.6.0",
		"slonik": "^46.2.0",
		"umzug": "^3.8.2",
		"yamljs": "^0.3.0",
		"zod": "^3.24.1"
	}
}
