{
	"name": "@gjuchault/typescript-service-starter",
	"version": "0.0.0-development",
	"description": "Yet another typescript service starter template",
	"author": {
		"name": "Gabriel Juchault",
		"email": "gabriel.juchault@gmail.com"
	},
	"type": "module",
	"exports": "./client/schema.d.ts",
	"types": "./client/schema.d.ts",
	"license": "MIT",
	"engines": {
		"node": "^24.3.0",
		"npm": "^11.4.2"
	},
	"volta": {
		"node": "24.3.0",
		"npm": "11.4.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"client"
	],
	"scripts": {
		"start": "node --env-file=.env --env-file-if-exists=.env.local ./build/index.js",
		"dev": "node --env-file=.env --env-file-if-exists=.env.local --watch ./src/index.ts | pino-pretty",
		"worker": "node --env-file=.env --env-file-if-exists=.env.local ./build/worker.js",
		"bundle": "node ./scripts/bundle.ts",
		"generate-client": "node --env-file=.env --env-file-if-exists=.env.local ./scripts/generate-client.ts",
		"generate-secret": "node ./scripts/generate-secret.ts",
		"migrate:up": "node --env-file=.env --env-file-if-exists=.env.local ./scripts/migrate.ts up",
		"migrate:down": "node --env-file=.env --env-file-if-exists=.env.local ./scripts/migrate.ts down",
		"migrate:create": "node --env-file=.env --env-file-if-exists=.env.local ./scripts/migrate.ts create",
		"type:check": "tsc --noEmit",
		"lint": "biome check . --write",
		"lint:check": "biome ci .",
		"test": "node --env-file=.env --env-file-if-exists=.env.local ./scripts/test.ts test",
		"test:watch": "node --env-file=.env --env-file-if-exists=.env.local ./scripts/test.ts test:watch",
		"test:coverage": "node --env-file=.env --env-file-if-exists=.env.local ./scripts/test.ts test:coverage",
		"spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\"",
		"cz": "cz",
		"semantic-release": "semantic-release",
		"setup": "node ./scripts/setup.ts",
		"test:setup": "node ./scripts/test-setup.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@ryansonshine/commitizen": "^4.2.8",
		"@ryansonshine/cz-conventional-changelog": "^3.3.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/github": "^11.0.3",
		"@semantic-release/npm": "^12.0.2",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@types/ms": "^2.1.0",
		"@types/node": "^24.0.12",
		"@types/prompts": "^2.4.9",
		"@types/yamljs": "^0.2.34",
		"c8": "^10.1.3",
		"cspell": "^9.1.3",
		"esbuild": "^0.25.6",
		"is-main": "^0.4.0",
		"launch-editor": "^2.10.0",
		"openapi-types": "^12.1.3",
		"openapi-typescript": "^7.8.0",
		"pino-pretty": "^13.0.0",
		"prompts": "^2.4.2",
		"rimraf": "^6.0.1",
		"semantic-release": "^24.2.6",
		"slugify": "^1.6.6",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@autotelic/fastify-opentelemetry": "^0.22.1",
		"@fastify/accepts-serializer": "^6.0.2",
		"@fastify/circuit-breaker": "^4.0.2",
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.0.1",
		"@fastify/formbody": "^8.0.2",
		"@fastify/helmet": "^13.0.1",
		"@fastify/multipart": "^9.0.3",
		"@fastify/rate-limit": "^10.3.0",
		"@fastify/session": "^11.1.0",
		"@fastify/swagger": "^9.5.1",
		"@fastify/under-pressure": "^9.0.3",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/exporter-metrics-otlp-proto": "^0.203.0",
		"@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
		"@opentelemetry/resources": "^2.0.1",
		"@opentelemetry/sdk-metrics": "^2.0.1",
		"@opentelemetry/sdk-node": "^0.203.0",
		"@opentelemetry/sdk-trace-node": "^2.0.1",
		"@opentelemetry/semantic-conventions": "^1.34.0",
		"bullmq": "^5.56.2",
		"connect-redis": "^9.0.0",
		"exit-hook": "^4.0.0",
		"fastify": "^5.4.0",
		"fastify-type-provider-zod": "^5.0.2",
		"http-terminator": "^3.2.0",
		"ioredis": "^5.6.1",
		"ms": "^2.1.3",
		"pino": "^9.7.0",
		"slonik": "^48.1.2",
		"umzug": "^3.8.2",
		"yamljs": "^0.3.0",
		"zod": "^3.25.76"
	}
}
