{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Current Test File",
			"type": "shell",
			"command": "node",
			"args": [
				"--env-file=.env",
				"--env-file-if-exists=.env.local",
				"--test",
				"${relativeFile}"
			],
			"presentation": {
				"clear": true,
				"showReuseMessage": false,
				"echo": false
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
